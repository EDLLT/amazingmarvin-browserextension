{
  "manifest_version": 3,
  "name": "Amazing Marvin",
  "description": "Add new tasks to Marvin and see Today's tasks",
  "version": "1.0",
  "icons": {
    "16": "static/logo2.png",
    "48": "static/logo2.png",
    "128": "static/logo2.png"
  },
  "action": {
    "default_icon": "static/logo2.png",
    "default_title": "Amazing Marvin",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["./content_scripts/gmail.js"]
    }
  ],
  "background": {
    "service_worker": "./background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["./static/logo.png"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": ["https://serv.amazingmarvin.com/api/*"],
  "permissions": [
    "storage",
    "tabs"
  ]
}
